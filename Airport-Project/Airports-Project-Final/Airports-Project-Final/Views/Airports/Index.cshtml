@model IEnumerable<Airports_Project_Final.Data.Airport>

@{
    ViewData["Title"] = "Index";
}
<div class="all-airline-info-wrap">
    <h1>Airports</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PORT_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PORT_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td class="edit-and-delete-airports-links">
                        <a class="airports-edit-link" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                        <a  class="airports-delete-link" asp-action="Delete" asp-route-id="@item.ID">Del</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>