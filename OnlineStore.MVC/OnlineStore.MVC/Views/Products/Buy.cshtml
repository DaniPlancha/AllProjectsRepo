@model OnlineStore.MVC.Models.ProductModel

@{
    ViewData["Title"] = "Buy";
}

<html>
<head>
    <link rel="stylesheet" href="~/css/SuccessfulPurchaseViewStyle.css" />
</head>
<body>
    <div class="congrats">
        <h1>Congratulations!</h1>
    </div>
    <div class="extra-info">
        <img src="~/Images/ching-chong-team.png"/>
        <p class="message">You successfully purchased the <span class="strong">@Model.Name</span> of color <span class="strong">@Model.ColorName</span> for <span class="strong">@Model.Price</span>!</p>
    </div>
    <a class="big" asp-controller="Categories" asp-action="Details" asp-route-id="@Model.CategoryId">Back to category</a>
</body>
</html>